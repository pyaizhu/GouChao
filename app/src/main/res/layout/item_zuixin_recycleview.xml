<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/icon_sy_sjts_bk"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="20:00"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tvFabu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvTime"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="发布"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvFabu"
            android:layout_weight="1"
            android:src="@drawable/icon_sy_sjts_xx"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSunday"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="星期三"/>

            <TextView
                android:id="@+id/tvData"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2-17"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    <TextView
        android:id="@+id/tvContent"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="40dp"
                android:id="@+id/ivZan"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/icon_sy_dz_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="20"
                android:id="@+id/tvZanNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="40dp"
                android:id="@+id/ivPL"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/icon_sy_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="20"
                android:id="@+id/tvPLNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>